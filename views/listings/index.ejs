<% layout ("/layouts/boilerplate") %>

<body>
    <br>
    <h1>All Listings</h1>
    <br>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
      </form> -->
      <div class="row  row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <%for(let listing of allListings){%>
            <a href="/listings/<%=listing._id%> " class="listing-link">
            <div class="card col" >
              <img src=" <%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;" >
              <div class="card-img-overlay"> </div>
              <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text"> <b><%=listing.title%></b>
              <br>
              &#8377;<b><%= listing.price.toLocaleString("en-IN")  %>
                / night </b></p>
                
              

                
              </div>
            </div>
            <%}%>
            
        </a>
            <br>
            
      </div>
      
</body>


